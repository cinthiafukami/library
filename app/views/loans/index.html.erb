<div class="container">
<h1 class="center">Listing loans</h1>

<table>
  <thead>
    <tr>
      <th>Reader's name</th>
      <th>Book rented</th>
      <th>Date of loan</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.reader.name%></td>
        <td><%= loan.book.title %></td>
        <td><%= loan.date_loan %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
</div>